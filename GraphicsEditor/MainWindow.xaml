<Window x:Class="GraphicsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="750">
    <Grid x:Name="grid1">
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                <Button x:Name="segment" Height="30" Click="segment_Click">отрезок</Button>
                <Button x:Name="rictangle" Height="30" Click="rictangle_Click">прямоугольник</Button>
                <Button x:Name="buttonColor" Height="20" Width="20" Background="Black" Click="Button_Click"/>
            </StackPanel>
            
            <Grid DockPanel.Dock="Right">
                <Canvas x:Name="canvas" DockPanel.Dock="Right" Background="White" MouseMove="canvas_MouseMove" MouseLeftButtonDown="canvas_MouseLeftButtonDown" MouseLeftButtonUp="canvas_MouseLeftButtonUp"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
